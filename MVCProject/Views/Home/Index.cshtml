@model IPagedList<MVCProject.Models.Product>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Sklep Internetowy";
}
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" type="text/css"/>

<h2>Strona główna</h2>
<div class="row">
    <div class="col-sm-12">
        <div class="form-inline pull-left">
            @using (Html.BeginForm("Index", "Home", FormMethod.Get))
            {
                <p>
                    @Html.TextBox("SearchText", ViewBag.CurrentFilter as string)
                    <input type="submit" value="Search" />
                </p>
            }
        </div>
    </div>
    <div class="container">
        <h2 class="text-center">Products List</h2>
        @foreach (var item in Model)
        {
            <div class="col-md-4" style="border: 2px solid black">
                <div style="text-align: center; border-bottom: 2px solid maroon ">
                    <h3>@item.Name</h3>
                    <h4>@item.Producer.Name</h4>
                </div>
                <div>
                    <div class="col-md-8">
                        <img class="img-responsive" src="" height="150px" width="150px" />
                    </div>
                    <div class="col-md-4" style="text-align: left">
                        <b>Category: @item.Category.Name</b>
                    </div>
                </div>

                <div class="col-md-8" style="font-size: 18px; border-top: 2px solid maroon; padding: 2px">
                    <b>Price: @item.Price PLN</b>
                </div>
                <div class="col-md-4" style="text-align: right; margin-bottom: 10px; border-top: 2px solid maroon; padding: 2px">
                    <input type="button" name="AddToCart" value="Add to Cart" class="btn btn-primary" productid="@item.ProductID" id="btnAddToCart" onclick="AddToCart(this)" />
                </div>
            </div>
        }
    </div>
</div>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))