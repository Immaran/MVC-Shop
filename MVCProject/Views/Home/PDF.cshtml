@model IEnumerable<MVCProject.Models.Category>
@{
    ViewBag.Title = "PDF";
}

<h2>PDF</h2>

<h2>Details</h2>

<table class="table">
    <tr>
        <th>
            Category
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Print Details View To PDF", "PrintPartialViewToPdf", new { id = item.CategoryID })
            </td>
        </tr>

    }
</table>  