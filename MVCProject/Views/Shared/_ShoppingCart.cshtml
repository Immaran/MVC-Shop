@using MVCProject.Models;

<ul class="nav navbar-nav navbar-right" id="bootstrap-overrides">
    <li class="dropdown">
        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Cart<b class="caret"></b></a>
        <ul class="cart dropdown-menu">
            @if (Session["cart"] != null)
            {
                foreach (Item item in (List<Item>)Session["cart"])
                {
                    <li class="cartItem">
                        <a href="@Url.Action("RemoveFromCart", "Home", new { productId = item.Product.ProductID })">@item.Product.Name (@item.Quantity) <i class="glyphicon glyphicon-remove"></i></a>
                    </li>
                }
                <li class="divider"></li>
                <li><a href="@Url.Action("Checkout","Home")">Checkout</a></li>
            }
            else
            {
                <li>
                    <a>Nothing here :c</a>
                </li>
            }
        </ul>
    </li>
</ul>
